---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import AboutComponent from "../components/AboutComponent.astro";
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="container mx-auto px-4 py-8">
      <div class="space-y-6 max-w-2xl mx-auto">
        <Welcome />
        <AboutComponent />
        <div class="bg-white/80 backdrop-blur rounded-xl shadow-lg p-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">ABOUTs</h2>
          <p class="text-lg text-gray-600">This is an about page</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
