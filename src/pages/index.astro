<div class="max-w-md mx-auto mt-8 p-4 bg-white rounded shadow">
  <!-- Test Case 1: Basic list items -->
  <ul class="space-y-2">
    <li class="p-3 bg-gray-100 rounded cursor-move hover:bg-gray-200 transition-colors duration-200">
      Item 1 - Drag me
    </li>
    <li class="p-3 bg-gray-100 rounded cursor-move hover:bg-gray-200 transition-colors duration-200">
      Item 2 - Drag me too
    </li>
    <li class="p-3 bg-gray-100 rounded cursor-move hover:bg-gray-200 transition-colors duration-200">
Item 3 - Also drasggable
</li>
    <li class="p-3 bg-gray-100 rounded cursor-move hover:bg-gray-200 transition-colors duration-200">
Item 4 - Try moving me
</li>
  </ul>

  <!-- Test Case 2: Nested draggable elements -->
  <div class="mt-8 p-4 bg-gray-50 rounded">
    <h3 class="font-bold mb-2">Nested Items:</h3>
    <div class="p-3 bg-gray-100 rounded cursor-move hover:bg-gray-200 transition-colors duration-200">
      Parent Item (draggable)
      <div class="mt-2 ml-4 p-2 bg-blue-100 rounded hover:bg-blue-200 transition-colors duration-200" data-not-movable="true">
        Child Item 1 (not draggable)
      </div>
      <div class="mt-2 ml-4 p-2 bg-blue-100 rounded hover:bg-blue-200 transition-colors duration-200" data-not-movable="true">
        Child Item 2 (not draggable)
      </div>
    </div>
  </div>

  <!-- Test Case 3: Elements with rich content -->
  <div class="mt-8">
    <div class="p-4 bg-gray-100 rounded cursor-move hover:bg-gray-200 transition-colors duration-200">
      <h4 class="font-bold">Complex Item (entire div is draggable)</h4>
      <p class="mt-2">With multiple elements including:</p>
      <ul class="list-disc ml-4 mt-1">
        <li>Images</li>
        <li>Lists</li>
        <li>Text content</li>
      </ul>
      <img src="https://picsum.photos/50" alt="Test" class="mt-2 rounded" />
    </div>
  </div>

  <!-- Test Case 4: Disabled state -->
  <div class="mt-8">
    <div class="p-3 bg-gray-100 rounded opacity-50 cursor-not-allowed" data-not-movable="true">
      This item should not be draggable
    </div>
  </div>

  <!-- Test Case 5: Non movable container with movable children -->
  <div class="mt-8" data-not-movable="true">
    Not movable container
    <div class="p-3 bg-gray-100 rounded cursor-move hover:bg-gray-200 transition-colors duration-200">
      Movable child
    </div>
  </div>
</div>
